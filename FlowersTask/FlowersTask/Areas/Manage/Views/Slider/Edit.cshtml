@model Slider
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="mt-4 ms-3">Edit Slider</h1>
            <form method="post" asp-action="edit" enctype="multipart/form-data">
  <div class="form-group mb-3">
    <label asp-for="Title1">Title1</label>
    <input asp-for="Title1" class="form-control">
    <span class="text-danger" asp-validation-for="Title1"></span>
  </div>
    <div class="form-group mb-3">
    <label asp-for="Title2">Title2</label>
    <input asp-for="Title2" class="form-control">
    <span class="text-danger" asp-validation-for="Title2"></span>
  </div>  <div class="form-group mb-3">
    <label asp-for="Desc">Description</label>
    <input asp-for="Desc" class="form-control">
    <span class="text-danger" asp-validation-for="Desc"></span>
  </div>  <div class="form-group mb-3">
    <label asp-for="Signature">Signature</label>
    <input asp-for="Signature" class="form-control">
    <span class="text-danger" asp-validation-for="Signature"></span>
  </div>  <div class="form-group mb-3">
    <label asp-for="OrderSlider">Order</label>
    <input asp-for="OrderSlider" class="form-control">
    <span class="text-danger" asp-validation-for="OrderSlider"></span>
  </div > 
                 <label class="mt-3" asp-for="ImageFile">Image File</label><br />
                <input class="form-control  " asp-for="ImageFile" />
                <span class="text-danger" asp-validation-for="ImageFile"></span>
                <img style="width:80%" src="~/manage/upload/slider/@Model.Image" />



    <button style="width:100%" class="btn btn-primary mt-5" type="submit">Edit</button>
</form>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
</div>