@model List<Slider>
@{
    int count = 1;
}

    <div class="container">
        <div class="row">
            <div class="col-lg-10">
                <h1 class="mt-5 ms-3" style="margin-right:50px">Slider</h1>
                <div class="text-end mb-5 me-3">
                    <a asp-controller="Slider" asp-action="Create" class="btn btn-primary" style="color:white">Add Slider</a>
                </div>
                <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Title</th>
      <th scope="col">Second Title</th>
      <th scope="col">Signature</th>
      <th scope="col">Image</th>
      <th scope="col">Change</th>

    </tr>
  </thead>
  <tbody>

                    @foreach (Slider item in Model)
                    {
                            <tr>
                                <th scope="row">@count</th>
                                <td>@item.Title1</td>
                                <td>@item.Title2</td>
                                <td>@item.Signature</td>
                                <td>
                                    <img style="width:70%" src="~/manage/upload/slider/@item.Image"/>
                                </td>
                                <td class="text-center">
                                    <a asp-controller="slider" asp-action="edit" asp-route-id=@item.Id class="btn btn-warning mb-2 text-white">Edit</a><br/>
                                    <a asp-controller="slider" asp-action="delete" asp-route-id=@item.Id class="btn btn-danger text-white">Delete</a>
                                </td>

                            </tr>
                        count++;
                    }
  </tbody>
</table>
            </div>
        </div>

    </div>