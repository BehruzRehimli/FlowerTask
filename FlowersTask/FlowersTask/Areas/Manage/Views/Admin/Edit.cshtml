@model AppUser
@{
    var count = 1;
}


<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="mt-4 ms-3">Edit Admin</h1>
            <form method="post" asp-controller="Admin" asp-action="Edit" enctype="multipart/form-data">
  <div class="form-group mb-3">
    <label asp-for="FullName">Full Name</label>
    <input asp-for="FullName" class="form-control">
    <span class="text-danger" asp-validation-for="FullName"></span>
  </div>
    <div class="form-group mb-3">
    <label asp-for="UserName">Username</label>
    <input asp-for="UserName" class="form-control">
    <span class="text-danger" asp-validation-for="UserName"></span>
  </div>  <div class="form-group mb-3">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" class="form-control">
    <span class="text-danger" asp-validation-for="Email"></span>
  </div>  <div class="form-group mb-3">
      <p>Current Roles</p>
      @foreach (var item in ViewBag.UserRoles)
                    {
                        <span>@count. @item</span><br />
                        count++;
                    }
                    <br /><br />
      <label asp-for="RolesIds">Change Role</label>
      
      <select class="form-control" asp-for="RolesIds">
                        @foreach (IdentityRole item in ViewBag.Roles)
                        {
                                <option value=@item.Id.ToString()>@item.Name</option>
                        }
      </select>
  </div> 
    <button class="btn btn-primary mt-5 form-control" type="submit">Edit</button>
</form>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
</div>